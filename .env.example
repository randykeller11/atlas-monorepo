# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_key_here

# Supabase Configuration (Required for Phase 2)
# Get these from your Supabase project dashboard → Settings → API
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9...your_service_role_key_here
SUPABASE_ANON_KEY=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9...your_anon_key_here

# Note: Run server/migrations/001_create_persona_cards.sql in Supabase SQL Editor

# Redis Configuration (Heroku Redis or compatible)
REDIS_URL=redis://default:password@host:port

# Session Configuration
SESSION_SECRET=your_long_random_session_secret_here
SESSION_TTL=604800

# Application Configuration
NODE_ENV=development
PORT=5001
APP_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info

# AI Configuration
MAX_CONTEXT_MESSAGES=20
MAX_TOKENS_PER_REQUEST=4000
SUMMARIZATION_THRESHOLD=15

# Context Summarization Configuration
CONTEXT_WINDOW_SIZE=6
MAX_SUMMARY_LENGTH=500
SUMMARIZATION_ENABLED=true

# Assessment Configuration
TOTAL_QUESTIONS=10
